            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_ContratoInfo", Model.Contrato);}
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Equipe</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_EquipeInfo", Model.Equipe);}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Calendário do Contrato</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
                <div class="actions">
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body calendario-portlet">
                <div class="row">
                    <div class="col-md-8 col-sm-8">
                        <div id="calendar">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <div class="portlet light ">
                            <div class="portlet-title">
                                <div class="caption caption-md">
                                    <i class="icon-bar-chart font-dark hide"></i>
                                    <span class="caption-subject font-green-steel uppercase bold">Info da Atividade <span id="codigoAtividade"></span></span>
                                </div>
                                <div class="tools">
                                    <a href="javascript:;" class="expand" id="showInfoAtividade"> </a>
                                </div>
                            </div>
                            <div class="portlet-body portlet-collapsed">
                                <div class="row">
                                    <div class="col-md-12" id="divInfoAtividade">
                                        <div class="btn-group pull-right">
                                            <a class="btn btn-circle btn-default btn-sm" href="javascript:;" data-toggle="dropdown" aria-expanded="false">
                                                <i class="fa fa-cogs"></i>
                                            </a>
                                            <ul class="dropdown-menu pull-right">
                                                <li>
                                                    <a href="javascript:;" id="copiarAtividade">
                                                        <i class="fa fa-copy"></i> Copiar
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="javascript:;" id="transferirAtividade">
                                                        <i class="fa fa-exchange"></i> Transferir
                                                    </a>
                                                </li>
                                                <li>
                                                    <a data-toggle="modal" href="#modalFinalizarAtividade" id="finalizarAtividade">
                                                        <i class="fa fa-check"></i> Finalizar
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div id="infoSituacao">
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Tipo de Atividade", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Tipo de Atividade" disabled id="tipoAtividade" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Atribuido Para", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Atribuido Para" disabled id="atribuidoPara" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Data Prevista", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Data Prevista" disabled id="dataPrevista" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input atividade-realizada">
                                            <div class="row">
                                                @Html.Label("Data Realizada", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Data de Realizada" disabled id="dataRealizada" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Descrição", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <textarea class="form-control" placeholder="Descrição" disabled id="descricao"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input atividade-realizada">
                                            <div class="row">
                                                @Html.Label("Observação", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <textarea class="form-control" placeholder="Descrição" disabled id="observacao"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">@ViewBag.SubSubTitle</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
                <div class="actions">
                    @Html.ActionLink("Adicionar", "AdicionarAtividade", "Contrato", new { id = Model.Contrato.IdContrato }, new { @class = "btn btn-no-border green btn-outline btn-circle btn-md" })
                </div>
            </div>
            <div class="portlet-body">
                @using (Html.BeginForm("Contrato", "Atividade", FormMethod.Get, new { @id = "form-busca" }))
                {
                    @Html.Hidden("contrato", Model.Contrato.IdContrato)
                    <div class="row">
                        <div class="col-md-1">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("codigo", new { htmlAttributes = new { @class = "form-control", @placeholder = "Código", @type = "number" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("tipoAtividade", new { htmlAttributes = new { @class = "form-control", @placeholder = "Tipo de Atividade" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("usuario", new { htmlAttributes = new { @class = "form-control", @placeholder = "Atribuido Para" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-md-line-input has-success">
                                @Html.DropDownList("realizada", EnumHelper.GetSelectList(typeof(SimOuNaoEnum)), "Realizada", new { @class = "form-control" })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("dataRealizacaoInicio", new { htmlAttributes = new { @class = "form-control dataAtividade", @placeholder = "Data de Realização Início" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("dataRealizacaoFim", new { htmlAttributes = new { @class = "form-control dataAtividade", @placeholder = "Data de Realização Fim" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("dataPrevistaInicio", new { htmlAttributes = new { @class = "form-control dataAtividade", @placeholder = "Data de Realização Prevista Início" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("dataPrevistaFim", new { htmlAttributes = new { @class = "form-control dataAtividade", @placeholder = "Data de Realização Prevista Fim" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-md-line-input has-success">
                                @Html.DropDownList("itensPagina", EnumHelper.GetSelectList(typeof(ItensPorPaginaEnum)), "Itens Por Página", new { @class = "form-control" })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        @Html.Hidden("ordenacao", (string)ViewBag.Ordenacao)
                        @Html.Hidden("crescente", (bool)ViewBag.Crescente)
                        <div class="col-md-3">
                            <div class="form-group form-md-line-input ">
                                <button type="submit" class="btn blue btn-circle">Buscar</button>
                                @Html.ActionLink("Limpar", "Contrato", "Atividade", new { id = Model.Contrato.IdContrato }, new { @class = "btn btn-white btn-outline btn-circle btn-md" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Dados</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body">
                @if (Model.Atividades.Count > 0)
                {
                    <div class="table-scrollable">
                        <table class="table table-hover table-light">
                            <thead>
                                <tr>
                                    <th onclick="ordenar('')">
                                        <a>
                                            #
                                        </a>
                                    </th>
                                    <th onclick="ordenar('TipoAtividade')">
                                        <a>
                                            Tipo de Atividade
                                        </a>
                                    </th>
                                    <th onclick="ordenar('AtribuidoPara')">
                                        <a>
                                            Atribuido Para
                                        </a>
                                    </th>
                                    <th onclick="ordenar('DataRealizacaoPrevista')">
                                        <a>
                                            Data de Realização Prevista
                                        </a>
                                    </th>
                                    <th onclick="ordenar('DataRealizacao')">
                                        <a>
                                            Data de Realização
                                        </a>
                                    </th>
                                    <th onclick="ordenar('Realizada')">
                                        <a>
                                            Tarefa Realizada
                                        </a>
                                    </th>
                                    <th>
                                        Descrição
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Atividades)
                                {
                                    <tr>
                                        <td>
                                            @item.IdAtividade
                                        </td>
                                        <td>
                                            @item.TipoAtividade.Descricao
                                        </td>
                                        <td>
                                            @(item.Usuario?.EmailEUserName)
                                        </td>
                                        <td>
                                            @{
                                                DateTime data = DateTime.Now;
                                            }
                                            @if (item.DataPrevista != null)
                                            {
                                                data = (DateTime)item.DataPrevista;
                                                @data.ToString("dd/MM/yyyy")
                                            }
                                        </td>
                                        <td>
                                            @if (item.DataRealizacao != null)
                                            {
                                                data = (DateTime)item.DataRealizacao;
                                                @data.ToString("dd/MM/yyyy")
                                            }
                                        </td>
                                        <td>
                                            @(item.Realizada ? "Sim" : "Não")
                                        </td>
                                        <td>
                                            <label class="btn blue btn-outline btn-circle btn-md tooltips" data-container="body" data-placement="top" data-original-title="@item.Descricao">
                                                <i class="fa fa-eye"></i>
                                            </label>
                                        </td>
                                        <td class="text-right">
                                            @Html.ActionLink("Alterar", "EditarAtividade", "Contrato", new { id = item.IdContrato, idAtividade = item.IdAtividade }, new { @class = "btn grey-gallery btn-outline btn-circle btn-md" })
                                            @Html.ActionLink("Excluir", "Excluir", "Atividade", new { id = item.IdAtividade }, new { @class = "btn red-flamingo btn-circle btn-md abrirModal" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <span class="italic bold">
                                @Model.Atividades.FirstItemOnPage a @Model.Atividades.LastItemOnPage de @Model.Atividades.TotalItemCount registros
                            </span>
                            <div class="text-center">
                                @Html.PagedListPager(Model.Atividades,
                               pagina => Url.Action("Contrato", "Atividade", new
                               {
                                   id = Model.Contrato.IdContrato,
                                   pagina,
                                   TipoAtividade = ViewBag.TipoAtividade,
                                   dataRealizacaoInicio = ViewBag.DataRealizacaoInicio,
                                   dataRealizacaoFim = ViewBag.DataRealizacaoFim,
                                   dataPrevistaInicio = ViewBag.DataPrevistaInicio,
                                   dataPrevistaFim= ViewBag.DataPrevistaFim,
                                   realizada = ViewBag.Realizada,
                                   itensPagina = ViewBag.ItensPagina,
                                   ordenacao = ViewBag.Ordenacao,
                                   crescente= ViewBag.Crescente
                               }))
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <h5 class="text-center">
                                    Não foram encontrados resultados
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@*Modais*@
<div id="modalFinalizarAtividade" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Finalizar Atividade</h4>
            </div>
            @using (Html.BeginForm("FinalizarAtividadeContrato", "Atividade", FormMethod.Post, new { @class = "form-horizontal margin-bottom-40", @id = "formFinalizarAtividade" }))
            {
                <div class="modal-body">
                    @Html.Hidden("IdAtividade", null, new { @id = "idFinalizarAtividade" })
                    <div class="form-group form-md-line-input atividadeRealizada">
                        @Html.Label("Data de Realizacao", new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.Editor("DataRealizacao", new { htmlAttributes = new { @class = "form-control dataAtividade", @placeholder = "Data de Realização", @required = "required" } })
                        </div>
                    </div>
                    <div class="form-group form-md-line-input atividadeRealizada">
                        @Html.Label("Observacao", new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.TextArea("Observacao", new { @class = "form-control", @placeholder = "Observações" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn yellow-haze btn-outline btn-circle btn-md">Cancelar</button>
                    <button type="submit" class="btn blue btn-circle">Finalizar</button>
                </div>
            }
        </div>
    </div>
</div>
<input type="hidden" value="@Model.TodasAtividadesSerializadas" id="atividades" />
@section scripts{
    @Scripts.Render("~/Ordenacao/js")
    @Scripts.Render("~/Modal/js")
    <script>
        function ObterSituacao(atividade) {
            $('#infoSituacao').html($("<span class=\"label label-" + atividade.SituacaoAtividade.Classe + "\"> " + atividade.SituacaoAtividade.Nome + "</span>"));
        }

        function ConverterData(data) {
            if (data == null)
                return "";
            return moment(new Date(data)).format("DD/MM/YYYY");
        }

        function ExibirAtividade(atividade) {
            MontarFinalizarAtividade(atividade);
            if (atividade != null) {
                $('#codigoAtividade').html('#' + atividade.IdAtividade)
                var $showInfoAtividade = $('#showInfoAtividade');
                if ($showInfoAtividade.hasClass('expand'))
                    $showInfoAtividade.click();
                ObterSituacao(atividade);
                $('#divInfoAtividade').show();
                $('#tipoAtividade').val(atividade.TipoAtividade.Descricao);
                $('#dataPrevista').val(ConverterData(atividade.DataPrevista));
                $('#dataRealizada').val(ConverterData(atividade.DataRealizacao));
                if (atividade.Usuario != null)
                    $('#atribuidoPara').val(atividade.Usuario.EmailEUserName)
                if (atividade.Realizada) {
                    $('.atividade-realizada').show();
                    $('#finalizarAtividade').hide();
                }
                else {
                    $('#finalizarAtividade').show();
                    $('.atividade-realizada').hide();
                }
                $('#descricao').val(atividade.Descricao);
                $('#observacao').val(atividade.Observacao);
            } else {
                $('#codigoAtividade').html('')
                $('#divInfoAtividade').hide();
                $('#finalizarAtividade').hide();
            }
        }

        function MontarFinalizarAtividade(atividade) {
            LimparForm('formFinalizarAtividade')
            if (atividade != null) {
                $('#idFinalizarAtividade').val(atividade.IdAtividade)
            }
        }

        function LimparForm(form) {
            $('#' + form).find("input, textarea").val("")
        }

        $(function () {
            ExibirAtividade(null);
            var $atividades = JSON.parse($('#atividades').val());
            var $events = [];
            $.each($atividades, function (key, item) {
                $events.push(
                    {
                        title: item.TipoAtividade.Descricao,
                        start: item.DataPrevista,
                        atividade: item,
                        color: item.SituacaoAtividade.BGCor
                    })
            });
            var initialLocaleCode = 'pt-br';
            $('#calendar').fullCalendar({
                header: {
                    left: '',
                    center: 'title',
                    right: 'prev,next today'
                },
                lang: initialLocaleCode,
                defaultView: 'month',
                buttonIcons: true,
                eventLimit: true,
                editable: true,
                events: $events
            });
            var calendar = $('#calendar').fullCalendar('getCalendar');
            calendar.on('eventClick', function (data) {
                ExibirAtividade(data.atividade);
            });

            $('.calendario-portlet').addClass('portlet-collapsed')
        });
    </script>
}