@using RAHSys.Aplicacao.AppModels;
@using RAHSys.Extras.Enums;
@using PagedList.Mvc;

@model  RAHSys.Apresentacao.Models.AtividadeContratoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

