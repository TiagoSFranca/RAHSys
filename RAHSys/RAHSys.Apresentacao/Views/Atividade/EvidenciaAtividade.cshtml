@using RAHSys.Aplicacao.AppModels;
@model  RAHSys.Apresentacao.Models.EvidenciaAtividadeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/FileInput/css");
    @Styles.Render("~/Select2/css");
}

<div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Equipe</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_EquipeInfo", Model.AtividadeInfo.Atividade.Equipe);}
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Contrato</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_ContratoInfo", Model.AtividadeInfo.Atividade.Contrato);}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Atividade</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_AtividadeInfo", Model.AtividadeInfo);}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">@ViewBag.SubTitle</span>
                </div>
            </div>
            <div class="portlet-body">
                @if (Model?.AtividadeInfo?.RegistroRecorrencia?.Evidencias?.Count() > 0)
                {
                    <div class="table-scrollable">
                        <table class="table table-hover table-light">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Nome do Arquivo
                                    </th>
                                    <th>
                                        Data Cadastro
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.AtividadeInfo.RegistroRecorrencia.Evidencias.OrderByDescending(e => e.DataUpload))
                                {
                                    <tr>
                                        <td>
                                            @item.IdEvidencia
                                        </td>
                                        <td>
                                            @item.NomeArquivo
                                        </td>
                                        <td>
                                            @item.DataUpload
                                        </td>
                                        <td class="text-right">
                                            @Html.ActionLink("Visualizar", "VisualizarEvidencia", "Evidencia", new { id = item.IdEvidencia }, new { @class = "btn grey-gallery btn-outline btn-circle btn-md", target = "_blank" })
                                            @Html.ActionLink("Excluir", "ExcluirEvidencia", "Atividade", new { id = item.IdEvidencia, idRegistroRecorrencia = item.IdRegistroRecorrencia, idEquipe = Model.AtividadeInfo.Atividade.IdEquipe, urlRetorno = ViewBag.UrlRetorno }, new { @class = "btn red-flamingo btn-circle btn-md abrirModal" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("AdicionarEvidencias", "Atividade", new { urlRetorno = ViewBag.UrlRetorno }, FormMethod.Post, new { @class = "form-horizontal margin-bottom-40", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("idAtividadeGeral", Model.AtividadeInfo.Atividade.IdAtividade)
    @Html.Hidden("idRegistroRecorrencia", Model.AtividadeInfo.RegistroRecorrencia.IdRegistroRecorrencia)
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart font-dark hide"></i>
                        <span class="caption-subject font-green-steel uppercase bold">Adicionar Evidências</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="form-group form-md-line-input" id="fileInputDiv">
                        <div class="col-md-9 col-md-offset-1">
                            <div class="fileinput fileinput-new" data-provides="fileinput" id="fileInput">
                                <span class="btn green btn-file btn-circle">
                                    <span class="fileinput-new"> Selecionar Evidência </span>
                                    <span class="fileinput-exists"> Alterar </span>
                                    <input type="file" name="...">
                                </span>
                                <span class="fileinput-filename"> </span> &nbsp;
                                <a href="javascript:;" class="close fileinput-exists" data-dismiss="fileinput"> </a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input">
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn blue btn-circle">Adicionar</button>
                            <a class="btn yellow-haze btn-outline btn-circle btn-md" href="@ViewBag.UrlRetorno">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/Modal/js")
    @Scripts.Render("~/FileInput/js")
    @Scripts.Render("~/Select2/js")
    @Scripts.Render("~/Atividade/EvidenciasFileInput/js")
}
