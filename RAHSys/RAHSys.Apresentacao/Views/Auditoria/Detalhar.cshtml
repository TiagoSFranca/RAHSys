@using RAHSys.Aplicacao.AppModels;

@model AuditoriaAppModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes Auditoria";
}

<h2>Detalhes do Registro Auditado</h2>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">@ViewBag.SubTitle</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="form-group form-md-line-input">
                    @Html.DisplayFor(model => model.IdAuditoria)
                    <div class="col-md-3 bold">
                        @Html.DisplayNameFor(model => model.IdAuditoria)
                    </div>
                </div>
                <div class="form-group form-md-line-input">
                    @Html.DisplayFor(model => model.Usuario)
                    <div class="col-md-3 bold">
                        @Html.DisplayNameFor(model => model.Usuario)
                    </div>
                </div>
                <div class="form-group form-md-line-input">
                    @Html.DisplayFor(model => model.Funcao)
                    <div class="col-md-3 bold">
                        @Html.DisplayNameFor(model => model.Funcao)
                    </div>
                </div>
                <div class="form-group form-md-line-input">
                    @Html.DisplayFor(model => model.Acao)
                    <div class="col-md-3 bold">
                        @Html.DisplayNameFor(model => model.Acao)
                    </div>
                </div>
                <div class="form-group form-md-line-input">
                    @Html.DisplayFor(model => model.DataHora)
                    <div class="col-md-3 bold">
                        @Html.DisplayNameFor(model => model.DataHora)
                    </div>
                </div>
                <div class="form-group form-md-line-input">
                    @Html.DisplayFor(model => model.EnderecoIP)
                    <div class="col-md-3 bold">
                        @Html.DisplayNameFor(model => model.EnderecoIP)
                    </div>
                </div>
                <div class="form-group form-md-line-input">
                    @Html.DisplayFor(model => model.Dados)                    
                    <div class="col-md-3 bold">
                        @Html.DisplayNameFor(model => model.Dados)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Voltar", "Index", "Auditoria", null, new { @class = "btn yellow-haze btn-outline btn-circle btn-md" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
