                                                <ul class="dropdown-menu ">
                                                    <li>
                                                        <a href="@Url.Action("EditarAtividade", "Contrato", new { id = item.IdContrato, idAtividade = item.IdAtividade })" class="btn grey-gallery btn-outline">
                                                            Alterar
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a data-toggle="modal" href="#modalCopiarAtividade" class="btn grey-gallery btn-outline inputCopiarAtividade" data-atividade="@atividadeSerializada">
                                                            Copiar
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a data-toggle="modal" href="#modalTransferirAtividade" class="btn grey-gallery btn-outline inputTransferirAtividade" data-atividade="@atividadeSerializada">
                                                            Transferir/Atribuir
                                                        </a>
                                                    </li>
                                                    @if (!item.Realizada)
                                                    {
                                                        <li>
                                                            <a data-toggle="modal" href="#modalFinalizarAtividade" class="btn grey-gallery btn-outline inputFinalizarAtividade" data-atividade="@atividadeSerializada">
                                                                Finalizar
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>

                                            @Html.ActionLink("Excluir", "Excluir", "Atividade", new { id = item.IdAtividade, urlRetorno = Url.Action("Atividades", "Contrato", new { id = Model.Contrato.IdContrato }) }, new { @class = "btn red-flamingo btn-circle btn-md abrirModal" })
