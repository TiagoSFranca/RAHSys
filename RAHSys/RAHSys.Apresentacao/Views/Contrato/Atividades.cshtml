@using Newtonsoft.Json;
@using RAHSys.Extras.Enums;
@using PagedList.Mvc;

@model  RAHSys.Apresentacao.Models.AtividadeContratoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Contrato</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_ContratoInfo", Model.Contrato);}
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Equipe</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_EquipeInfo", Model.Equipe);}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Calendário do Contrato</span>
                </div>
                <div class="actions">
                    @Html.ActionLink("Adicionar", "AdicionarAtividade", "Contrato", new { id = Model.Contrato.IdContrato }, new { @class = "btn btn-no-border green btn-outline btn-circle btn-md" })
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body calendario-portlet">
                <div class="row">
                    <div class="col-md-8 col-sm-8">
                        <div id="calendar">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <div class="portlet light ">
                            <div class="portlet-title">
                                <div class="caption caption-md">
                                    <i class="icon-bar-chart font-dark hide"></i>
                                    <span class="caption-subject font-green-steel uppercase bold">Info da Atividade <span id="codigoAtividade"></span></span>
                                </div>
                                <div class="tools">
                                    <a href="javascript:;" class="expand" id="showInfoAtividade"> </a>
                                </div>
                            </div>
                            <div class="portlet-body portlet-collapsed">
                                <div class="row">
                                    <div class="col-md-12" id="divInfoAtividade">
                                        <div class="btn-group pull-right">
                                            <a class="btn btn-circle btn-default btn-sm" href="javascript:;" data-toggle="dropdown" aria-expanded="false">
                                                <i class="fa fa-cogs"></i>
                                            </a>
                                            <ul class="dropdown-menu pull-right">
                                                <li>
                                                    <a data-toggle="modal" href="#modalCopiarAtividade" class="btn grey-gallery btn-outline inputCopiarAtividade" data-atividade="" id="copiarAtividade">
                                                        Copiar Atividade
                                                    </a>
                                                </li>
                                                <li>
                                                    <a data-toggle="modal" href="#modalTransferirAtividade" class="btn grey-gallery btn-outline inputTransferirAtividade" data-atividade="" id="transferirAtividade">
                                                        Transferir/Atribuir
                                                    </a>
                                                </li>
                                                <li>
                                                    <a data-toggle="modal" href="#modalFinalizarAtividade" class="btn grey-gallery btn-outline inputFinalizarAtividade" data-atividade="" id="finalizarAtividade">
                                                        Finalizar Recorrência
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div id="infoSituacao">
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Tipo de Atividade", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Tipo de Atividade" disabled id="tipoAtividade" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Atribuido Para", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Atribuido Para" disabled id="atribuidoPara" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Data Prevista", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Data Prevista" disabled id="dataPrevista" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input atividade-realizada">
                                            <div class="row">
                                                @Html.Label("Data Realizada", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Data de Realizada" disabled id="dataRealizada" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Descrição", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <textarea class="form-control" placeholder="Descrição" disabled id="descricao"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input atividade-realizada">
                                            <div class="row">
                                                @Html.Label("Observação", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <textarea class="form-control" placeholder="Descrição" disabled id="observacao"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*Modais*@
@Html.Partial("_ModalFinalizarAtividade")
@Html.Partial("_ModalCopiarAtividade")
@Html.Partial("_ModalTransferirAtividade")
<input type="hidden" value="@Model.TodasAtividadesSerializadas" id="atividades" />
<input type="hidden" value="@Url.Action("Atividades", "Contrato", new { id = Model.Contrato.IdContrato })" id="inputUrlRetorno" />
@section scripts{
    @Scripts.Render("~/Ordenacao/js")
    @Scripts.Render("~/Modal/js")
    @Scripts.Render("~/Atividade/Contrato/js")
    @Scripts.Render("~/Atividade/js")
}