                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body">
                @if (Model.Atividades.Count > 0)
                {
                    <div class="table-scrollable">
                        <table class="table table-hover table-light">
                            <thead>
                                <tr>
                                    <th onclick="ordenar('')">
                                        <a>
                                            #
                                        </a>
                                    </th>
                                    <th onclick="ordenar('TipoAtividade')">
                                        <a>
                                            Tipo de Atividade
                                        </a>
                                    </th>
                                    <th onclick="ordenar('AtribuidoPara')">
                                        <a>
                                            Atribuido Para
                                        </a>
                                    </th>
                                    <th onclick="ordenar('DataRealizacaoPrevista')">
                                        <a>
                                            Data Prevista
                                        </a>
                                    </th>
                                    <th onclick="ordenar('DataRealizacao')">
                                        <a>
                                            Data de Realização
                                        </a>
