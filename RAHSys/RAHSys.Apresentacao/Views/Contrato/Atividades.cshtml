                                                <li>
                                                    <a data-toggle="modal" href="#modalFinalizarAtividade" class="btn grey-gallery btn-outline inputFinalizarAtividade" data-atividade="" id="finalizarAtividade">
                                                        Finalizar
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div id="infoSituacao">
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Tipo de Atividade", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Tipo de Atividade" disabled id="tipoAtividade" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Atribuido Para", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Atribuido Para" disabled id="atribuidoPara" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Data Prevista", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Data Prevista" disabled id="dataPrevista" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input atividade-realizada">
                                            <div class="row">
                                                @Html.Label("Data Realizada", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" class="form-control" placeholder="Data de Realizada" disabled id="dataRealizada" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input">
                                            <div class="row">
                                                @Html.Label("Descrição", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <textarea class="form-control" placeholder="Descrição" disabled id="descricao"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-md-line-input atividade-realizada">
                                            <div class="row">
                                                @Html.Label("Observação", new { @class = "col-md-12 control-label" })
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <textarea class="form-control" placeholder="Descrição" disabled id="observacao"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
