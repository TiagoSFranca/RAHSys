@using RAHSys.Aplicacao.AppModels;
@model  RAHSys.Apresentacao.Models.FinalizarAtividadeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/FileInput/css");
    @Styles.Render("~/Select2/css");
}

<div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Contrato</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_ContratoInfo", Model.AtividadeInfo.Atividade.Contrato);}
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Equipe</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_EquipeInfo", Model.AtividadeInfo.Atividade.Equipe);}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Atividade</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_AtividadeInfo", Model.AtividadeInfo);}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">@ViewBag.SubTitle</span>
                </div>
            </div>
            <div class="portlet-body">
                @using (Html.BeginForm("FinalizarAtividade", "Contrato", new { urlRetorno = ViewBag.UrlRetorno }, FormMethod.Post, new { @class = "form-horizontal margin-bottom-40" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.AtividadeInfo.Atividade.IdContrato)
                    @Html.HiddenFor(model => model.AtividadeInfo.Atividade.IdAtividade)
                    <div class="form-group form-md-line-input">
                        @Html.LabelFor(m => m.DataRealizacao, new { @class = "col-md-2 control-label" })
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.DataRealizacao, new { htmlAttributes = new { @class = "form-control dataAtividade", @placeholder = "Realizado em", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.DataRealizacao, "", new { @class = "text-danger" })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        @Html.LabelFor(m => m.Observacao, new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control", @placeholder = "Observação" })
                            @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn blue btn-circle">Salvar</button>
                            @Html.ActionLink("Limpar", "FinalizarAtividade", "Contrato", new { id = Model.AtividadeInfo.Atividade.IdContrato, idAtividade = Model.AtividadeInfo.Atividade.IdAtividade, data = Model.AtividadeInfo.DataPrevista, urlRetorno = ViewBag.UrlRetorno }, new { @class = "btn btn-white btn-outline btn-circle btn-md" })
                            <a class="btn yellow-haze btn-outline btn-circle btn-md" href="@ViewBag.UrlRetorno">Cancelar</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


