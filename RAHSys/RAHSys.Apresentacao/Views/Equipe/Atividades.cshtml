@using Newtonsoft.Json;
@using RAHSys.Extras.Enums;
@using PagedList.Mvc;

@model  RAHSys.Apresentacao.Models.AtividadeEquipeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Equipe</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand"> </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                @{Html.RenderPartial("_EquipeInfo", Model.Equipe);}
            </div>
        </div>
    </div>
</div>
@if (ViewBag.ModoVisualizacao.Equals(ModoVisualizacaoEnum.Dia.Nome))
{
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart font-dark hide"></i>
                        <span class="caption-subject font-red uppercase bold">Atividades Atrasadas</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="expand"> </a>
                    </div>
                </div>
                <div class="portlet-body portlet-collapsed">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-scrollable">
                                <table class="table table-hover table-light">
                                    <thead>
                                        <tr>
                                            <th>
                                                Data
                                            </th>
                                            <th>
                                                Quantidade
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.AtividadesAtrasadas)
                                        {
                                            var data = item.Key.ToString("dd/MM/yyyy");
                                            <tr>
                                                <td>
                                                    <a href="@Url.Action("Atividades", "Equipe", new { id = Model.Equipe.IdEquipe, dataInicial = data, dataFinal = data})">@data</a>
                                                </td>
                                                <td>
                                                    @item.Value
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Calendário da Equipe</span>
                </div>
                <div class="actions">
                    @Html.ActionLink("Adicionar", "AdicionarAtividade", "Equipe", new { id = Model.Equipe.IdEquipe }, new { @class = "btn btn-no-border green btn-outline btn-circle btn-md" })
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body calendario-portlet">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div id="calendar">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="portlet light ">
                                    <div class="portlet-title">
                                        <div class="caption caption-md">
                                            <i class="icon-bar-chart font-dark hide"></i>
                                            <span class="caption-subject font-green-steel uppercase bold">Info da Recorrência <span id="codigoRecorrencia"></span></span>
                                        </div>
                                        <div class="tools">
                                            <a href="javascript:;" class="expand" id="showInfoRecorrencia"> </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body portlet-collapsed">
                                        <div class="row">
                                            <div class="col-md-12" id="divInfoRecorrencia">
                                                <div class="btn-group pull-right" id="ulRecorrencia">
                                                    <a class="btn btn-circle btn-default btn-sm" href="javascript:;" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-cogs"></i>
                                                    </a>
                                                    <ul class="dropdown-menu pull-right">
                                                        <li>
                                                            <a href="" class="btn grey-gallery btn-outline addDataAtividade" data-atividade="" id="finalizarRecorrencia">
                                                                Finalizar Atividade
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="" class="btn grey-gallery btn-outline addDataAtividade" data-atividade="" id="evidencias">
                                                                Evidencias
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div id="infoSituacaoRecorrencia">
                                                </div>
                                                <div class="form-group form-md-line-input">
                                                    <div class="row">
                                                        @Html.Label("Data Prevista", new { @class = "col-md-12 control-label" })
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control" placeholder="Data Prevista" disabled id="dataPrevista" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group form-md-line-input atividade-realizada">
                                                    <div class="row">
                                                        @Html.Label("Data Realizada", new { @class = "col-md-12 control-label" })
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control" placeholder="Data de Realizada" disabled id="dataRealizada" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group form-md-line-input atividade-realizada">
                                                    <div class="row">
                                                        @Html.Label("Observação", new { @class = "col-md-12 control-label" })
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <textarea class="form-control" placeholder="Descrição" disabled id="observacao"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="portlet light ">
                                    <div class="portlet-title">
                                        <div class="caption caption-md">
                                            <i class="icon-bar-chart font-dark hide"></i>
                                            <span class="caption-subject font-green-steel uppercase bold">Info da Atividade <span id="codigoAtividade"></span></span>
                                        </div>
                                        <div class="tools">
                                            <a href="javascript:;" class="expand" id="showInfoAtividade"> </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body portlet-collapsed">
                                        <div class="row">
                                            <div class="col-md-12" id="divInfoAtividade">
                                                <div class="form-group">
                                                    <div class="btn-group pull-right">
                                                        <a class="btn btn-circle btn-default btn-sm" href="javascript:;" data-toggle="dropdown" aria-expanded="false">
                                                            <i class="fa fa-cogs"></i>
                                                        </a>
                                                        <ul class="dropdown-menu pull-right">
                                                            <li>
                                                                <a data-toggle="modal" href="#modalCopiarAtividade" class="btn grey-gallery btn-outline addDataAtividade" data-atividade="">
                                                                    Copiar Atividade
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a data-toggle="modal" href="#modalTransferirAtividade" class="btn grey-gallery btn-outline addDataAtividade" data-atividade="">
                                                                    Transferir/Atribuir
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a data-toggle="modal" href="#modalEncerrarAtividade" class="btn grey-gallery btn-outline addDataAtividade" data-atividade="" id="encerrarAtividade">
                                                                    Encerrar Atividade
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="btn grey-gallery btn-outline addDataAtividade" data-atividade="" id="editarAtividade">
                                                                    Editar Atividade
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a data-toggle="modal" href="#modalExcluirAtividade" class="btn grey-gallery btn-outline addDataAtividade" data-atividade="">
                                                                    Excluir Atividade
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="form-group form-md-line-input">
                                                    <div class="row">
                                                        @Html.Label("Tipo de Atividade", new { @class = "col-md-12 control-label" })
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control" placeholder="Tipo de Atividade" disabled id="tipoAtividade" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group form-md-line-input">
                                                    <div class="row">
                                                        @Html.Label("Atribuido Para", new { @class = "col-md-12 control-label" })
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control" placeholder="Atribuido Para" disabled id="atribuidoPara" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group form-md-line-input">
                                                    <div class="row">
                                                        @Html.Label("Descrição", new { @class = "col-md-12 control-label" })
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <textarea class="form-control" placeholder="Descrição" disabled id="descricao"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="portlet light ">
                                    <div class="portlet-title">
                                        <div class="caption caption-md">
                                            <i class="icon-bar-chart font-dark hide"></i>
                                            <span class="caption-subject font-green-steel uppercase bold">Info do Contrato <span id="codigoContrato"></span></span>
                                        </div>
                                        <div class="tools">
                                            <a href="javascript:;" class="expand" id="showInfoContrato"> </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body portlet-collapsed">
                                        <div class="row">
                                            <div class="col-md-12" id="divInfoContrato">
                                                <div class="form-group form-md-line-input">
                                                    @Html.LabelFor(model => model.Contrato.IdContrato, new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" placeholder="Código" disabled id="idContrato" />
                                                    </div>
                                                </div>
                                                <div class="form-group form-md-line-input">
                                                    @Html.LabelFor(model => model.Contrato.ContatoInicial, new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" placeholder="Contato Inicial" disabled id="contatoInicial" />
                                                    </div>
                                                </div>
                                                <div class="form-group form-md-line-input">
                                                    @Html.LabelFor(model => model.Contrato.NomeEmpresa, new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" placeholder="Nome da Empresa" disabled id="nomeEmpresa" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*BEGIN -- Necessários para o calendário*@

@*Modais*@
@Html.Partial("_ModalCopiarAtividade")
@Html.Partial("_ModalExcluirAtividade")
@Html.Partial("_ModalEncerrarAtividade")
@Html.Partial("_ModalTransferirAtividade")
@Html.Partial("_ModalFinalizarRecorrencia")
@Html.Partial("_ModalAlterarEquipe")

<input type="hidden" value="@ViewBag.DataInicial" id="dataInicial" />
<input type="hidden" value="@ViewBag.DataFinal" id="dataFinal" />
<input type="hidden" value="@ViewBag.ModoVisualizacao" id="modoVisualizacao" />
<input type="hidden" value="@Model.TodasAtividadesSerializadas" id="atividades" />
<input type="hidden" value="@Url.Action("Atividades", "Equipe", new { id = Model.Equipe.IdEquipe})" id="inputUrlBase" />
<input type="hidden" value="@Url.Action("EditarAtividade", "Equipe", new { id = Model.Equipe.IdEquipe})" id="inputEditarAtividade" />
<input type="hidden" value="@Url.Action("FinalizarAtividade", "Equipe", new { id = Model.Equipe.IdEquipe})" id="inputUrlFinalizarAtividade" />
<input type="hidden" value="@Url.Action("EvidenciaAtividade", "Equipe", new { id = Model.Equipe.IdEquipe})" id="inputUrlEvidencias" />
<input type="hidden" value="@Url.Action("Atividades", "Equipe", new { id = Model.Equipe.IdEquipe, dataInicial = ViewBag.DataInicial, dataFinal = ViewBag.DataFinal, modoVisualizacao = ViewBag.ModoVisualizacao })" id="inputUrlRetorno" />
<input type="hidden" value="@JsonConvert.SerializeObject(RAHSys.Extras.Helper.EquipeHelper.EquipeInteira)" id="equipeInteiraHelper" />
@*END -- Necessários para o calendário*@

@section scripts{
    @Scripts.Render("~/Ordenacao/js")
    @Scripts.Render("~/Modal/js")
    @Scripts.Render("~/Atividade/js")
    @Scripts.Render("~/Equipe/Atividade/js")
}