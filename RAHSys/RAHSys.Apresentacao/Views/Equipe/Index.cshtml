@using RAHSys.Aplicacao.AppModels;
@using RAHSys.Extras.Enums;
@using PagedList.Mvc;

@model PagedList.StaticPagedList<EquipeAppModel>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Buscar</span>
                </div>
                <div class="actions">
                    @Html.ActionLink("Adicionar", "Adicionar", "Equipe", null, new { @class = "btn btn-no-border green btn-outline btn-circle btn-md" })
                </div>
            </div>
            <div class="portlet-body">
                @using (Html.BeginForm("Index", "Equipe", FormMethod.Get, new { @id = "form-busca" }))
                {
                    <div class="row">
                        <div class="col-md-1">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("codigo", new { htmlAttributes = new { @class = "form-control", @placeholder = "Código" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-md-line-input has-success">
                                @Html.Editor("email", new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-md-line-input has-success">
                                @Html.DropDownList("itensPagina", EnumHelper.GetSelectList(typeof(ItensPorPaginaEnum)), "Itens Por Página", new { @class = "form-control" })
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>
                        @Html.Hidden("ordenacao", (string)ViewBag.Ordenacao)
                        @Html.Hidden("crescente", (bool)ViewBag.Crescente)
                        <div class="col-md-3">
                            <div class="form-group form-md-line-input ">
                                <button type="submit" class="btn blue btn-circle">Buscar</button>
                                @Html.ActionLink("Limpar", "Index", "Equipe", null, new { @class = "btn btn-white btn-outline btn-circle btn-md" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Dados</span>
                </div>
            </div>
            <div class="portlet-body">
                @if (Model.Count > 0)
                {
                    <div class="table-scrollable">
                        <table class="table table-hover table-light">
                            <thead>
                                <tr>
                                    <th onclick="ordenar('')">
                                        <a>
                                            #
                                        </a>
                                    </th>
                                    <th onclick="ordenar('lider')">
                                        <a>
                                            Líder
                                        </a>
                                    </th>
                                    <th>
                                        Equipe
                                    </th>
                                    <th>
                                        Descrição
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.IdEquipe
                                    </td>
                                    <td>
                                        @item.Lider.EmailEUserName
                                    </td>
                                    <td>
                                        @Html.Raw(item.ObterEquipe())
                                    </td>
                                    <td>
                                        <label class="btn blue btn-outline btn-circle btn-md tooltips" data-container="body" data-html="true" data-placement="auto" data-original-title="@item.Descricao.Replace("\n","<br>")">
                                            <i class="fa fa-eye"></i>
                                        </label>
                                    </td>
                                    <td class="text-right">
                                        @Html.ActionLink("Alterar", "Editar", "Equipe", new { id = item.IdEquipe }, new { @class = "btn grey-gallery btn-outline btn-circle btn-md" })
                                        @Html.ActionLink("Excluir", "Excluir", "Equipe", new { id = item.IdEquipe }, new { @class = "btn red-flamingo btn-circle btn-md abrirModal" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <span class="italic bold">
                                @Model.FirstItemOnPage a @Model.LastItemOnPage de @Model.TotalItemCount registros
                            </span>
                            <div class="text-center">
                                @Html.PagedListPager(Model,
                               pagina => Url.Action("Index", "Equipe", new
                               {
                                   pagina,
                                   codigo = ViewBag.Codigo,
                                   itensPagina = ViewBag.ItensPagina,
                                   ordenacao = ViewBag.Ordenacao,
                                   crescente = ViewBag.Crescente
                               }))
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <h5 class="text-center">
                                    Não foram encontrados resultados
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Ordenacao/js")
    @Scripts.Render("~/Modal/js")
}