@model List<RAHSys.Aplicacao.AppModels.EquipeAppModel>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">@ViewBag.SubTitle</span>
                </div>
            </div>
            <div class="portlet-body">
                @if (Model.Count > 0)
                {
                    <div class="table-scrollable">
                        <table class="table table-hover table-light">
                            <thead>
                                <tr>
                                    <th onclick="ordenar('')">
                                        #
                                    </th>
                                    <th>
                                        Equipe
                                    </th>
                                    <th>
                                        Descrição
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.IdEquipe
                                        </td>
                                        <td>
                                            @Html.Raw(item.ObterEquipe())
                                        </td>
                                        <td>
                                            <label class="btn blue btn-outline btn-circle btn-md tooltips" data-container="body" data-html="true" data-placement="auto" data-original-title="@item.Descricao.Replace("\n","<br>")">
                                                <i class="fa fa-eye"></i>
                                            </label>
                                        </td>
                                        <td class="text-right">
                                            @Html.ActionLink("Atividades", "Atividades", "Equipe", new { id = item.IdEquipe }, new { @class = "btn grey-gallery btn-outline btn-circle btn-md" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <h5 class="text-center">
                                    Não foram encontradas equipes que você seja lider
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

