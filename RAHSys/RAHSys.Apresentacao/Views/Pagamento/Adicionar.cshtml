@model RAHSys.Apresentacao.Models.PagamentoAdicionarModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">Contrato</span>
                </div>
            </div>
            <div class="portlet-body">
                @{Html.RenderPartial("_ContratoInfo", Model.Contrato);}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-green-steel uppercase bold">@ViewBag.SubTitle</span>
                </div>
            </div>
            <div class="portlet-body">
                @using (Html.BeginForm("Adicionar", "Pagamento", FormMethod.Post, new { @class = "form-horizontal margin-bottom-40" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Pagamento.IdContrato)
                    <div class="form-group form-md-line-input">
                        @Html.LabelFor(model => model.Pagamento.DataPagamento, new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Pagamento.DataPagamento, new { htmlAttributes = new { @class = "form-control", @placeholder = "Data de Pagamento", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.Pagamento.DataPagamento, "", new { @class = "text-danger" })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        @Html.LabelFor(m => m.Pagamento.Observacao, new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Pagamento.Observacao, new { @class = "form-control", @placeholder = "Observação" })
                            @Html.ValidationMessageFor(model => model.Pagamento.Observacao, "", new { @class = "text-danger" })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn blue btn-circle">Salvar</button>
                            @Html.ActionLink("Limpar", "Adicionar", "Pagamento", new { id = Model.Contrato.IdContrato }, new { @class = "btn btn-white btn-outline btn-circle btn-md" })
                            @Html.ActionLink("Cancelar", "Index", "Pagamento", new { id = Model.Contrato.IdContrato }, new { @class = "btn yellow-haze btn-outline btn-circle btn-md" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>