@model RAHSys.Aplicacao.AppModels.PagamentoAppModel
@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">@ViewBag.SubTitle</h4>
</div>
@using (Html.BeginForm("Excluir", "Pagamento", FormMethod.Post, new { @class = "form-horizontal margin-bottom-40" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IdContrato)
    @Html.HiddenFor(model => model.IdPagamento)
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="portlet light ">
                    <div class="portlet-body">
                        <div class="form-group form-md-line-input">
                            <div class="col-md-12">
                                @{
                                    DateTime data = Model.DataPagamento != null ? (DateTime)Model.DataPagamento : DateTime.Now;
                                }
                                Tem certeza que deseja excluir o pagamento do mês <strong>@data.ToString("MM/yyyy")</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn red-flamingo btn-circle btn-md">Excluir</button>
                <button type="button" class="btn yellow-haze btn-outline btn-circle btn-md" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
}

