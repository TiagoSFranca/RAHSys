<div id="modalAlterarEquipe" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Alterar Equipe</h4>
            </div>
            @using (Html.BeginForm("AlterarEquipe", "Atividade", null,
                    FormMethod.Post, new { @class = "form-horizontal margin-bottom-40", @id = "formAlterarEquipe" }))
            {
                @Html.Hidden("urlRetorno", null, new { @class = "urlRetorno" })
                <div class="modal-body" id="modalAlterarEquipeBody">
                    @Html.Hidden("IdAtividade", null, new { @class = "idAtividade" })
                    <div class="form-group form-md-line-input">
                        @Html.Label("Alterar para", new { @class = "col-md-3 control-label" })
                        <div class="col-md-7">
                            <select class="form-control equipeAtividade" name="IdEquipe" placeholder="Alterar Para" required id="ddlEquipe">
                                <option value="">Selecione</option>
                            </select>
                            <div class="form-control-focus"> </div>
                        </div>
                        <div class="col-md-2">
                            <label class="btn blue btn-outline btn-circle btn-md tooltips" id="nomeEquipe" data-container="#modalAlterarEquipeBody" data-placement="right" data-html="true" data-original-title="">
                                <i class="fa fa-eye"></i>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn blue btn-circle">Alterar Equipe</button>
                    <button type="button" data-dismiss="modal" class="btn yellow-haze btn-outline btn-circle btn-md">Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>