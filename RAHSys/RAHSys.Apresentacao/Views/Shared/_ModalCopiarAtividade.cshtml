<div id="modalCopiarAtividade" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Copiar Atividade</h4>
            </div>
            @using (Html.BeginForm("CopiarAtividade", "Atividade", null,
                    FormMethod.Post, new { @class = "form-horizontal margin-bottom-40", @id = "formCopiarAtividade" }))
            {
                @Html.Hidden("urlRetorno", null, new { @class = "urlRetorno" })
                <div class="modal-body">
                    @Html.Hidden("IdAtividade", null, new { @class = "idAtividade" })
                    <div class="form-group form-md-line-input">
                        @Html.Label("Atribuido Para", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            <select class="form-control atividadeUsuario" name="IdUsuario" placeholder="Atribuido Para">
                                <option value="">Selecione</option>
                            </select>
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        @Html.Label("Data Prevista", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.Editor("DataPrevista", new { htmlAttributes = new { @class = "form-control dataAtividade atividadeDataPrevista", @placeholder = "Data de Realização Prevista", @required = "required" } })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        @Html.Label("Descrição", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextArea("Descricao", new { @class = "form-control atividadeDescricao", @placeholder = "Descrição" })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        <div class="col-md-8 col-md-offset-3">
                            <div class="md-checkbox-inline">
                                <div class="md-checkbox">
                                    @Html.CheckBox("Realizada", new { @class = "md-check atividadeChkRealizada", @id = "chkRealizada" })
                                    <label for="chkRealizada">
                                        <span></span>
                                        <span class="check"></span>
                                        <span class="box"></span> Atividade Realizada
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input atividadeRealizada">
                        @Html.Label("Data de Realização", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.Editor("DataRealizacao", new { htmlAttributes = new { @class = "form-control dataAtividade atividadeDataRealizacao", @placeholder = "Data de Realização", @id = "dataRealizacao" } })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input atividadeRealizada">
                        @Html.Label("Observação", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextArea("Observacao", new { @class = "form-control atividadeObservacao", @placeholder = "Observações" })
                            <div class="form-control-focus"> </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn yellow-haze btn-outline btn-circle btn-md">Cancelar</button>
                    <button type="submit" class="btn blue btn-circle">Copiar</button>
                </div>
            }
        </div>
    </div>
</div>