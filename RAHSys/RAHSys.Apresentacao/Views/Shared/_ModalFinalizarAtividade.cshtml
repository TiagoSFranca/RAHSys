<div id="modalFinalizarAtividade" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Finalizar Atividade</h4>
            </div>
            @using (Html.BeginForm("FinalizarAtividade", "Atividade", null,
                FormMethod.Post, new { @class = "form-horizontal margin-bottom-40", @id = "formFinalizarAtividade" }))
            {
                @Html.Hidden("urlRetorno", null, new { @class = "urlRetorno" })
                <div class="modal-body">
                    @Html.Hidden("IdAtividade", null, new { @class = "idAtividade" })
                    <div class="form-group form-md-line-input">
                        @Html.Label("Data de Realizacao", new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.Editor("DataRealizacao", new { htmlAttributes = new { @class = "form-control dataAtividade", @placeholder = "Data de Realização", @required = "required" } })
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        @Html.Label("Observacao", new { @class = "col-md-2 control-label" })
                        <div class="col-md-9">
                            @Html.TextArea("Observacao", new { @class = "form-control", @placeholder = "Observações" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn yellow-haze btn-outline btn-circle btn-md">Cancelar</button>
                    <button type="submit" class="btn blue btn-circle">Finalizar</button>
                </div>
            }
        </div>
    </div>
</div>